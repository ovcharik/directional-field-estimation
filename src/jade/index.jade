doctype html
html
  head

    link( rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css' )

    script( src='https://code.jquery.com/jquery-2.1.4.js' )
    script( src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' )

    link( rel='stylesheet' href='./styles.css' )
    script( src='./libs.js' )
    script( src='./main.js' )

    title Directional Field Estimation

  body
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          a.navbar-brand(href='/')
            span.Text(data-key='title') Directional Field Estimation

    .container

      .row
        //- left
        .col-xs-8
          .panel.panel-default
            .panel-heading
              span.Text(data-key='result') Result
            .panel-body.canvas-container.CanvasContainer
              .loading.Loading
                .loading-content
                  span.Text(data-key='loading') Calculating...
              canvas.Canvas

        //- right
        .col-xs-4
          //- config panel
          .panel.panel-default
            .panel-heading
              span.Text(data-key='config') Config
            .panel-body

              .form-horizontal
                .form-group
                  label.control-label.col-xs-6.Text(data-key='cellSize') Cell size
                  .col-xs-6
                    input.form-control.OptionsInput(name='cell' type='number' min='10' max='30' step='1' value='15')

              button.btn.btn-block.btn-default.BtnView(data-view='image')
                span.Text(data-key='source') Source image
              button.btn.btn-block.btn-default.BtnView(data-view='angle')
                span.Text(data-key='angle') Angles
              button.btn.btn-block.btn-default.BtnView(data-view='length')
                span.Text(data-key='length') Length
              button.btn.btn-block.btn-default.BtnView(data-view='coh')
                span.Text(data-key='coherency') Coherency

          //- images panel
          .panel.panel-default
            .panel-heading
              span.Text(data-key='images') Images
            .panel-body
              .row.overflow-auto.ImagesContainer
